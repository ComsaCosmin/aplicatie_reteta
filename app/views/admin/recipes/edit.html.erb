<div class="row">
	<div class="col-md-12">
		<%= form_for @recipe, url: admin_recipes_path do |f| %>
		<div class="form-horizontal">
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :title%>
					<%= f.text_field :title, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :description %>
					<%= f.cktext_area  :description, :ckeditor => {:toolbar => 'mini'}, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :ingredient %>
					<%= f.cktext_area  :ingredient,  :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'mini'}, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :direction %>
					<%= f.cktext_area  :direction, :ckeditor => {:toolbar => 'mini'}, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :type %>
					<%= f.text_field :type, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :specific %>
					<%= f.text_field :specific, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.label :difficulty %>
					<%= f.text_field :difficulty, class: "form-control" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<%= f.file_field :image, as: :file %>
				</div>
			</div>
				<%= f.submit "Submit", class: "btn btn-default pull-right" %>
		</div>
		<% end %>
	</div>
</div>